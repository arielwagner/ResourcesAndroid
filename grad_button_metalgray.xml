<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#e3e4e4" />
            <stroke
                android:width="1dp"
                android:color="#979797" />
            <corners
                android:radius="65dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#e1e1e1"
                android:endColor="#949494"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#6c6c6c" />
            <corners
                android:radius="65dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
